<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bg_place"/>

    <FrameLayout
        android:id="@+id/more_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/more_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/more_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_top_layout"
        android:background="#DCDCDC"/>
    <TextView
        android:id="@+id/userVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前版本"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_version"
        android:layout_below="@id/more_line2"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/userVersion"
        android:background="#DCDCDC"/>
    <TextView
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_cache"
        android:layout_below="@id/more_line3"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/userPassword"
        android:background="#DCDCDC"/>
    <TextView
        android:id="@+id/userShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享软件"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_userbg"
        android:layout_below="@id/more_line4"
        android:drawablePadding="20dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/userShare"
        android:background="#DCDCDC"/>
    <TextView
        android:id="@+id/userLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出应用"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_user"
        android:layout_below="@id/more_line5"
        android:drawablePadding="20dp"
        android:padding="10dp"/>
</RelativeLayout>
